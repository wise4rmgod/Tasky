<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".View.MainActivity" android:id="@+id/mainbackground">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:background="@drawable/newdesign"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/bottomlayout" android:visibility="visible">

        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_add_white_24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/floatingActionButtonsave"
                app:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="44dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="180dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="170dp"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_more_vert_black_24dp"
                android:id="@+id/menubutton"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="335dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="88dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bckgrndimage"
            android:id="@+id/Backgroundimage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="41dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="41dp"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/do_something"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="201dp"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="160dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/sidemenulayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" All Task"
                android:textSize="17sp"
                android:drawableStart="@drawable/ic_dashboard_black_24dp"
                android:drawableEnd="@drawable/ic_navigate_next_black_24dp"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" About App"
                android:textSize="17sp"
                android:drawableStart="@drawable/ic_info_black_24dp"
                android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
                android:layout_marginTop="10dp"
        />
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000"
                app:layout_constraintGuide_begin="338dp"
                android:id="@+id/guideline"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Rate The App"
                android:textSize="17sp"
                android:drawableStart="@drawable/ic_star_black_24dp"
                android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
                android:layout_marginTop="10dp"
        />
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000"
                app:layout_constraintGuide_begin="338dp"
                android:id="@+id/guideline3"/>
        <TextView
                android:id="@+id/closesidemenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Close Menu"
                android:textSize="17sp"
                android:drawableStart="@drawable/ic_close_black_24dp"
                android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
                android:layout_marginTop="10dp"
        />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/bottommenuwithedittext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp" app:layout_constraintTop_toBottomOf="@+id/Backgroundimage"
            android:visibility="gone">
        <EditText
                android:id="@+id/editextsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type Task"/>
        <Button
                android:id="@+id/savebtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="save"
                android:background="@drawable/rndbtn"
        />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>